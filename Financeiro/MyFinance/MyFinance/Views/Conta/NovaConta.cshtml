@model ContaModel


@{
    ViewData["Title"] = "NovaConta";
}

<h2>NovaConta</h2>

<form asp-controller="Conta" asp-action="NovaConta">

    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Saldo</label>
        <input type="text" asp-for="Saldo" class="form-control" />
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Criar</button>

</form>