
@{
    ViewData["Title"] = "Index";
}

<h3>Minhas Contas</h3>

<table class="table table-striped">

    <thead>
        <tr>
            <td>#</td>
            <th>ID</th>
            <th>Nome</th>
            <th>Saldo</th>
        </tr>
    </thead>


    @{
        foreach (var item in (List<ContaModel>)ViewBag.ListasContas)
        {
            <tbody>
                <tr>
                    <td><button type="button" class="btn btn-danger">Excluir</button></td>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Nome.ToString()</td>
                    <td>R$ @item.Saldo.ToString()</td>
                </tr>
            </tbody>
        }

    }

</table>